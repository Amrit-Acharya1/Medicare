<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Medicine Details Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_8sdp">

            <!-- First Line: Medicine Name, Qty, and Price -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textMedicineName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:textStyle="italic"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text="Paracetamol"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginEnd="@dimen/_8sdp"/>

                <!-- Quantity -->
                <TextView
                    android:id="@+id/medicineQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text="x2"
                    android:minWidth="@dimen/_28sdp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_12sdp"/>



            </LinearLayout>

            <!-- Second Line: Dosage and Frequency -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp">

                <TextView
                    android:id="@+id/textMedicineDoseQty"
                    android:fontFamily="@font/inter"
                    android:textStyle="normal"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="#66000000"
                    android:text="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textMedicineDoseUnit"
                    android:fontFamily="@font/inter"
                    android:textStyle="normal"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="#66000000"
                    android:text="mg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textSeparatorDot"
                    android:fontFamily="@font/inter"
                    android:textStyle="normal"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="#66000000"
                    android:text=" â€¢ "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textDosageFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="2"
                    android:textColor="#66000000"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text=" times a day"
                    android:textColor="#66000000"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal" />

            </LinearLayout>

            <!-- Third Line: Manufacturer -->
            <TextView
                android:id="@+id/textManufacturer"
                android:fontFamily="@font/inter"
                android:textStyle="normal"
                android:textSize="@dimen/_9sdp"
                android:textColor="#66000000"
                android:text="Quest Pharmaceutical PVT .Ltd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>