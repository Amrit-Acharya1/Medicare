<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#FFFFFF"
    tools:context=".PasswordResetActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back_icon"
                android:src="@drawable/back_button"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"/>

            <!-- Title -->
            <TextView
                android:fontFamily="@font/inter_bold"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set New Password"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#3366FF"
                android:layout_marginTop="20dp" />

            <!-- Subtitle -->
            <TextView
                android:fontFamily="@font/inter"
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an unique password."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="5dp" />

            <!-- Illustration -->
            <ImageView
                android:id="@+id/illustration"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/new_password_ui"
                android:scaleType="centerInside"
                android:contentDescription="Forgot password illustration" />


            <!-- Input field -->
            <EditText
                android:fontFamily="@font/inter_semibold"
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Create new password"
                android:textSize="@dimen/_12sdp"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginTop="@dimen/_20sdp" />

            <EditText
                android:fontFamily="@font/inter_semibold"
                android:id="@+id/conform_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password"
                android:textSize="@dimen/_12sdp"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginTop="@dimen/_20sdp" />

            <!-- Send Code button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/password_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:layout_marginTop="20dp"
                android:padding="12dp" />

            <!-- Back to login -->
            <TextView

                android:fontFamily="@font/inter_bold"
                android:id="@+id/back_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="Back to login ?"
                android:textColor="#66000000"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
