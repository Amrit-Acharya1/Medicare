<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#FFFFFF"
    tools:context=".ForgetPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back_icon"
                android:src="@drawable/back_button"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"/>

            <!-- Title -->
            <TextView
                android:fontFamily="@font/inter_bold"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#3366FF"
                android:layout_marginTop="20dp" />

            <!-- Subtitle -->
            <TextView
                android:fontFamily="@font/inter"
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No worries, We got you."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="5dp" />

            <!-- Illustration -->
            <ImageView
                android:id="@+id/illustration"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/forgotpasswordimage"
                android:scaleType="centerInside"
                android:contentDescription="Forgot password illustration" />

            <!-- Info Text -->
            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We'll send you code to reset it."
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/inter"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <!-- Input field -->
            <EditText
                android:fontFamily="@font/inter"
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter email address"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginTop="@dimen/_20sdp" />

            <!-- Send Code button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/send_code_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Code"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:layout_marginTop="20dp"
                android:padding="12dp" />

            <!-- Back to login -->
            <TextView

                android:fontFamily="@font/inter_bold"
                android:id="@+id/back_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="â† Back to log in?"
                android:textColor="#66000000"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
