<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_60sdp"
    android:background="#F5F7FA"
    tools:context=".doctor.DoctorPatientFragment">

    <!-- ==================== DOCTOR HEADER ==================== -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/doctor_header_bar"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingTop="@dimen/_40sdp"
        android:paddingBottom="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profile Circle -->
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="#0E9D4D"
            app:cardCornerRadius="28dp"
            app:cardElevation="3dp">

            <TextView
                android:id="@+id/iconText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="K"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:fontFamily="sans-serif-medium" />
        </androidx.cardview.widget.CardView>

        <!-- Name & Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Krishna Dahal"
                android:textColor="#1A1A1A"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/did"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Reg ID: P12345"
                android:textColor="#5A5A5A"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/specialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Neurologist"
                android:textColor="#0E9D4D"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Notification Bell with Badge -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/bell_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/bell_icon"
                app:tint="#1A1A1A"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/notification_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/dot_background"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- ==================== SEARCH BAR ==================== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="14dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_search"
                app:tint="#9CA3AF" />

            <EditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:hint="Search by Name or Number"
                android:textSize="15sp"
                android:textColor="#1A1A1A"
                android:textColorHint="#9CA3AF"
                android:background="@android:color/transparent"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/scan_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/camera_icon"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#9CA3AF" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>




    <!-- ==================== PATIENT COUNT HEADER ==================== -->
    <LinearLayout
        android:id="@+id/count_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/search_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_patient_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="45 Patients Found"
            android:textColor="#1A1A1A"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/btn_sort"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_sort"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="#6B7280"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <!-- ==================== PATIENTS RECYCLER VIEW ==================== -->

    <!-- ==================== EMPTY STATE ==================== -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_patients"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="20dp"
        android:paddingBottom="16dp"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/count_header"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_patient_card" />

    <ImageView
        android:id="@+id/noUserImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_user_image"
        app:layout_constraintTop_toBottomOf="@id/count_header"
        app:layout_constraintLeft_toLeftOf="@id/main"

        />



    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rv_patients"
        app:layout_constraintBottom_toBottomOf="@id/rv_patients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F3F4F6">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_patients"
                app:tint="#D1D5DB" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No Patients Found"
            android:textColor="#6B7280"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Try adjusting your search or filter"
            android:textColor="#9CA3AF"
            android:textSize="14sp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>