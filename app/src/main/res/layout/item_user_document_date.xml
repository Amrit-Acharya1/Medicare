<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_12sdp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Document Icon (Image or PDF) -->
        <ImageView
            android:id="@+id/imageDocument"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="@dimen/_12sdp"
            android:contentDescription="Document preview" />

        <!-- Document Details Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- First Line: Document Type & Date -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textDocumentType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text="Prescription"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginEnd="@dimen/_8sdp"/>

                <TextView
                    android:id="@+id/textDocumentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#99000000"
                    android:text="04 Nov, 2025"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Second Line: Doctor Name -->
            <TextView
                android:id="@+id/textDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_9sdp"
                android:textColor="#66000000"
                android:text="Dr. Rajesh Sharma"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>