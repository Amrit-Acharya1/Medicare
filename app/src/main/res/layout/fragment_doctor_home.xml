<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".doctor.DoctorHomeFragment">

    <!-- ==================== HEADER ==================== -->
    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/doctor_header_bar"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingTop="@dimen/_40sdp"
        android:paddingBottom="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profile Circle -->
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="#0E9D4D"
            app:cardCornerRadius="28dp"
            app:cardElevation="3dp">

            <TextView
                android:id="@+id/iconText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="K"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:fontFamily="sans-serif-medium" />
        </androidx.cardview.widget.CardView>

        <!-- Name & Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Krishna Dahal"
                android:textColor="#1A1A1A"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/did"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Reg ID: P12345"
                android:textColor="#5A5A5A"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/specialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Neurologist"
                android:textColor="#0E9D4D"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Notification Bell with Badge -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/bell_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/bell_icon"
                app:tint="#1A1A1A"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/notification_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/dot_background"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- ==================== SCROLLABLE CONTENT ==================== -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="#F5F7FA"
        android:scrollbars="none"
        android:layout_marginBottom="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_24sdp">

            <!-- Today's Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <!-- Today's Patients -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_8sdp"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_16sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E3F2FD">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_patients"
                                    app:tint="#1976D2" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:text="Today's Patients"
                            android:textColor="#6B7280"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/todayPatientsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text=""
                            android:textColor="#1A1A1A"
                            android:textSize="@dimen/_24sdp"
                             />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Prescriptions -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_16sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E8F5E9">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_prescription"
                                    app:tint="#2E7D32" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:text="Today's Cases"
                            android:textColor="#6B7280"
                            android:textSize="@dimen/_11sdp"
                             />

                        <TextView
                            android:id="@+id/todayCases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text=""
                            android:textColor="#1A1A1A"
                            android:textSize="@dimen/_24sdp"
                             />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="@dimen/_16sdp">

                <!-- Add Patient -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addPatientCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_20sdp"
                        android:paddingHorizontal="@dimen/_16sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#EDE7F6">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_add_circle"
                                app:tint="#6A1B9A" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:text="Add Patient"
                            android:textColor="#1A1A1A"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Contact Admin -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/contactAdminCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_20sdp"
                        android:paddingHorizontal="@dimen/_16sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFF3E0">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_support"
                                app:tint="#EF6C00" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:text="Contact Admin"
                            android:textColor="#1A1A1A"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Last Week Patients Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_20sdp">

                    <!-- Chart Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last Week Patients"
                                android:textColor="#1A1A1A"
                                android:textSize="@dimen/_15sdp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Weekly patient overview"
                                android:textColor="#9CA3AF"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F3F4F6">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_patients"
                                app:tint="#6B7280" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Bar Chart -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:paddingHorizontal="@dimen/_4sdp">

                        <!-- Sun -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/sunCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#6B7280"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/sunBar"
                                android:layout_width="28dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bar_background" />

                            <TextView
                                android:id="@+id/sunLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="Sun"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <!-- Mon -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/monCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#6B7280"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/monBar"
                                android:layout_width="28dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bar_background" />

                            <TextView
                                android:id="@+id/monLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="Mon"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <!-- Tue -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tueCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#6B7280"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/tueBar"
                                android:layout_width="28dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bar_background" />

                            <TextView
                                android:id="@+id/tueLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="Tue"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <!-- Wed -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/wedCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#6B7280"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/wedBar"
                                android:layout_width="28dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bar_background" />

                            <TextView
                                android:id="@+id/wedLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="Wed"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <!-- Thu -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/thuCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#6B7280"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/thuBar"
                                android:layout_width="28dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bar_background" />

                            <TextView
                                android:id="@+id/thuLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="12dp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="sans-serif"
                                android:text="Thu"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Fri -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/friCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#6B7280"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/friBar"
                                android:layout_width="28dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bar_background" />

                            <TextView
                                android:id="@+id/friLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="Fri"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>

                        <!-- Sat -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/satCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#6B7280"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/satBar"
                                android:layout_width="28dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bar_background" />

                            <TextView
                                android:id="@+id/satLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="Sat"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/timelineMain"
                android:layout_marginTop="@dimen/_12sdp"

                android:background="@drawable/card_background"
                android:padding="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingHorizontal="@dimen/_18sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:fontFamily="@font/inter_semibold"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_9sdp"
                        android:text="Recient Patients"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recientPatientRecycler"
                    tools:listitem="@layout/item_recient_patient"
                    tools:itemCount="3"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/viewAll"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter"
                    android:textSize="@dimen/_11sdp"
                    android:paddingHorizontal="@dimen/_30sdp"
                    android:text="View all"
