<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ClinicRegistrationActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/back_button"
            android:src="@drawable/back_button"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/inter_bold"
            android:text="Register as Clinic"
            android:textColor="@color/blue"
            android:textSize="@dimen/_23sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/inter_medium"
            android:text="Welcome to Medicare"
            android:textColor="#A3000000"
            android:textSize="@dimen/_13sdp" />
        <ImageView
            android:id="@+id/illustration"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/register_image"
            android:scaleType="centerInside"
            android:contentDescription="Forgot password illustration" />
        <TextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your registration details"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/inter"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/clinic_registration_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22sdp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/inter_semibold"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="@dimen/_11sdp"
            android:paddingVertical="@dimen/_12sdp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/clinic_registration_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/inter_semibold"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingHorizontal="@dimen/_11sdp"
            android:paddingVertical="@dimen/_12sdp" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/clinic_registration_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/inter_semibold"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:paddingHorizontal="@dimen/_11sdp"
            android:paddingVertical="@dimen/_12sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clinic_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_26sdp"
            android:background="@drawable/button_background"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/inter_semibold"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_12sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="Already have an account ?"
                android:textColor="@color/black" />

            <TextView

                android:fontFamily="@font/inter_bold"
                android:id="@+id/back_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_11sdp"
                android:text="â† Back to log in?"
                android:textColor="#66000000"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>