<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- Modern Material Card with proper bottom sheet behavior -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:strokeWidth="0dp"
        app:behavior_peekHeight="160dp"
        app:behavior_hideable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Drag Handle (Modern pill shape) -->
            <View
                android:layout_width="48dp"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/bs_drag_handle_rounded"
                 />

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                android:paddingTop="20dp">

                <!-- Icon with nice background -->
                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/circle_primary_container"
                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_time"
                         />
                </FrameLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Recent Patients"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01" />



            </LinearLayout>

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="6dp"
                android:paddingBottom="16dp"
                android:text="Your most recently viewed patients"

                android:textSize="14sp" />

            <!-- Thin divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="24dp" />

            <!-- RecyclerView with nice padding -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recientPatientRecyclerBottomsheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                tools:listitem="@layout/item_recient_patient"
                tools:itemCount="6" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>