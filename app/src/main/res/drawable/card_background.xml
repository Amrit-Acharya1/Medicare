<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow -->
    <item>
        <shape>
            <solid android:color="#1A000000" />
            <corners android:radius="@dimen/_12sdp" />
        </shape>
    </item>
    <!-- Card Background -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="@dimen/_12sdp"/>
            <stroke android:color="#0A000000" android:width="1dp"/>
        </shape>
    </item>
</layer-list>